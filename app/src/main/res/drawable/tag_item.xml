<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_material_light" />
            <corners android:radius="10dp" />
            <stroke android:color="@color/primary_text_default_material_light" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_text_default_material_light" />
            <corners android:radius="10dp" />
            <stroke android:color="@color/background_material_light" />
        </shape>
    </item>
</selector>