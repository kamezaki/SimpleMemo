<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/tag_horizontal_padding"
    android:paddingRight="@dimen/tag_horizontal_padding"
    android:layout_marginLeft="@dimen/tag_horizontal_margin"
    android:layout_marginRight="@dimen/tag_horizontal_margin"
    android:layout_marginTop="@dimen/tag_vertical_margin"
    android:layout_marginBottom="@dimen/tag_vertical_margin"
    android:background="@drawable/tag_item">

    <ImageView
        android:layout_width="@dimen/tag_delete_button_size"
        android:layout_height="@dimen/tag_delete_button_size"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_delete"
        android:id="@+id/tagflow_item_delete"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:id="@+id/tagflow_item_text" />
</LinearLayout>
